#!/usr/bin/env bash

current_dir="$(dirname $0)"
cd $current_dir/..

case $1 in
    run)
    ./run.sh >run.log 2>&1 &
    echo "Pi container started"
    ;;
    stop)
    docker stop pi
    echo "Pi container stopped"
    ;;
    rm)
    docker rm pi
    echo "Pi container removed"
    ;;
    build)
    docker build -t pi .
    ;;
esac
