#!/usr/bin/env bash

current_dir="$(dirname $0)"
cd $current_dir/..

case $1 in
    run)
    ./run.sh >run.log 2>&1 &
    echo "Pi container started"
    ;;
    stop)
    docker stop pi >/dev/null
    echo "Pi container stopped"
    ;;
    rm)
    docker rm pi >/dev/null
    echo "Pi container removed"
    ;;
    build)
    docker build -t pi .
    ;;
    rebuild)
    ./bin/pictl stop
    ./bin/pictl rm && ./bin/pictl build
esac
